{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",
    "./common/**/*.ts",
    "./test/**/*.spec.ts"
  ],
  "ts-node": {
    "files": true
  }
}
